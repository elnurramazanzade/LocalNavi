@{
    ViewBag.Title = "Admin panelinə giriş";
}

    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading text-center">
                        <h3 class="panel-title">Daxil olun</h3>
                    </div>
                    <div class="panel-body">
                        <form role="form" action="@Url.Action("login","admin")" method="post">
                            <fieldset>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Login" name="login" type="text" autofocus>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Şifrə" name="password" type="password" value="">
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input name="remember" type="checkbox" value="Remember Me">Məni xatırla
                                    </label>
                                </div>
                                <!-- Change this to a button or input when using this as a form -->
                                <button type="submit" class="btn btn-lg btn-success btn-block">Daxil ol</button>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>